<form id="new-session-form" action="/sessions/{{this._id}}" method="post">
  <div class="mb-3">
    <label for="email" class="form-label">Email address</label>
    <input id="email" type="email" name="email" class="form-control justify-content-center" aria-describedby="emailHelp">
    <div id="emailHelp"></div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input id="password" type="password" class="form-control" name="password"  minlength="4" required value="">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>