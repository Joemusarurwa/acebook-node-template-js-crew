<h1>Timeline</h1>
<ul style="list-style: none;" class="posts">
  {{#each posts}}

  <li class="round3"><h3>{{this.message}}</h3><h5> {{this.time}} posted by 
    <a href="/users/{{this.writer}}" action="/users/{{this.writer}}" method='GET'> {{this.nameOfWriter}}</a></h5> 
   <button onclick="likehandler(event)" class="like__btn button4">
      <span id="icon"><i class="far fa-thumbs-up"></i></span>
      <span id="count">0</span> Like
    </button>
    
    <br><ul style="list-style: none;">{{#each this.comments}}
    <br><li> {{this.comment}} <br><h5> @ {{this.time}} <a href="/users/{{this.writer}}" action="/users/{{this.writer}}" method='GET'> {{this.nameOfWriter}}</a> </li></h5>
    {{/each}}</ul>

    <br>
    <form id="comment" action="/posts/{{this._id}}/new-comment" method="post">
    <input id="comment" type="text" name="comment" value="">
    <input type="submit" value="comment" class="like__btn button4">
    </form>

</form>
  </li>
 
  <script src="/client.js"></script>

  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>


